<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/item_subjectout"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:gravity="center|start"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_subjectremark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="out"/>

    <TextView
        android:id="@+id/item_subjectremark"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:gravity="center|start"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_subjectcode"
        app:layout_constraintRight_toLeftOf="@+id/item_subjectout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Itemremark"/>

    <TextView
        android:id="@+id/item_subjectcode"
        style="@style/Base.CardView"
        android:layout_width="147dp"
        android:layout_height="42dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:gravity="center|start"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_subjectremark"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="itemname"/>

</android.support.constraint.ConstraintLayout>