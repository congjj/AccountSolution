<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
    >


    <TextView
        android:id="@+id/rep_item"
        style="@style/Base.CardView"
        android:layout_width="74dp"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:text="rep_item"/>

    <TextView
        android:id="@+id/rep_itemremark"
        style="@style/Base.CardView"
        android:layout_width="108dp"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:text="rep_itemremark"/>

    <TextView
        android:id="@+id/rep_count"
        style="@style/Base.CardView"
        android:layout_width="93dp"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:gravity="right"
        android:text="rep_values"
        android:textColor="@color/colorRed"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/rep_date"
        style="@style/Base.CardView"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:gravity="right"
        android:text="rep_date"/>

    <TextView
        android:id="@+id/rep_ischeck"
        style="@style/Base.CardView"
        android:layout_width="42dp"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:gravity="center"
        android:text="rep_ischeck"/>
</LinearLayout>